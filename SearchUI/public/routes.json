{
    "routes": [
      {
        "route": "/logout",
        "serve": "/.auth/logout"
      },
      {
        "route": "/login",
        "serve": "/.auth/login/aad"
      },
      {
        "route": "/.auth/login/github",
        "statusCode": "404"
      },
      {
        "route": "/.auth/login/google",
        "statusCode": "404"
      },
      {
        "route": "/.auth/login/facebook",
        "statusCode": "404"
      },
      {
        "route": "/.auth/login/twitter",
        "statusCode": "404"
      },
      {
        "route": "/home",
        "serve": "/",
        "statusCode": 301
      },
      { 
        "route": "/search", 
        "allowedRoles": ["authenticated"]
      },
      { 
        "route": "/upload", 
        "allowedRoles": ["authenticated"] 
      },
      { 
        "route": "/api/search", 
        "allowedRoles": ["authenticated"] 
      },
      { 
        "route": "/api/lookup", 
        "allowedRoles": ["authenticated"] 
      },
      { 
        "route": "/api/suggest", 
        "allowedRoles": ["authenticated"] 
      },
      { 
        "route": "/api/upload", 
        "allowedRoles": ["authenticated"] 
      },
      { 
        "route": "/api/getKb", 
        "allowedRoles": ["authenticated"] 
      },
      { 
        "route": "/api/answer", 
        "allowedRoles": ["authenticated"] 
      },
      { 
        "route": "/details/*", 
        "allowedRoles": ["authenticated"] 
      },
      {
        "route": "/*",
        "serve": "/",
        "statusCode": 200
      }
    ],
    "platformErrorOverrides": [
      {
        "errorType": "Unauthenticated",
        "serve": "/login"
      },
      {
        "errorType": "NotFound",
        "serve": "/index.html",
        "statusCode": 200
      }
    ]
  }
